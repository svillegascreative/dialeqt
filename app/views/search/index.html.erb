<h1>Search results for "<%= @query %>"</h1>

<h3>Words</h3>
<% if @words.blank? %>
  <p>There are no words that match your search.</p>
<% else %>
  <ul class="search-results">
    <% @words.each do |word| %>
      <li>
        <%= link_to word.name, word %>
      </li>
    <% end %>
  </ul>
<% end %>

<h3>Definitions</h3>
<% if @definitions.blank? %>
  <p>There are no definitions that match your search.</p>
<% else %>
  <ul class="search-results">
    <% @definitions.each do |definition| %>
      <li>
        <%= link_to definition.word.name, definition.word %>
        <p><%= definition.details %></p>
        <p><%= definition.example %></p>
      </li>
    <% end %>
  </ul>
<% end %>
