<div class="<%= item.class.base_class.name.to_s.downcase %>-author">
  By <%= item.user.username %>
  on <%= item.when_created %>
  <% if current_user == item.user %>
    <%= link_to "Edit", polymorphic_url(item, action: :edit) %> |
    <%= link_to "Delete", polymorphic_url(item), method: :delete,
      data: { confirm: "CAUTION: DELETION CANNOT BE UNDONE.\n\nAre you sure you want to delete this #{item.class.base_class.name.to_s.downcase}?"}  %>
  <% end %>
</div>
