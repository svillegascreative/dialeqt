<div class="splash">

  <div class="splash-heading">
    <h1>dial<span>eq</span>t</h1>
    <h2>The language of <span>equestrians</span></h2>
  </div>

  <div class="splash-search">
    <%= form_tag search_path, method: :get do %>
      <p>
        What do horse people mean when they say
        <%= text_field_tag :query, nil, autofocus: true %>&nbsp;?
      </p>
      <%= submit_tag "Find out!", name: nil  %>
    <% end %>
  </div>

  <div class="splash-menu">
    <ul class="splash-menu">
      <li><%= link_to "Sign up", new_user_registration_path %></li>
      <li><%= link_to "Sign in", new_user_session_path %></li>
      <li><%= link_to "Explore!", "#top" %></li>
    </ul>
    <div class="triangle-down"></div>
    </div>
  </div>
</div>
