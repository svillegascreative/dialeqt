<h1><%= @word.name %></h1>
<div class="word-votes">
  <%= link_to "like", like_word_path(@word), method: :put %> (<%= @word.get_likes.size %>)
  <%= link_to "dislike", dislike_word_path(@word), method: :put %> (<%= @word.get_dislikes.size %>)
</div>

<% if @definitions %>
    <%= render @definitions.sort_by_wilson_score %>
<% end %>

<% if current_user %>
  <h3>Add a Definition</h3>
  <%= render partial: "definitions/form", word: @word %>
<% end %>
